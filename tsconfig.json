{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": [
      "es2021",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./out",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@girs"
    ],
    "types": [
      "gjs",
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    ".",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
